#!/bin/bash
set -euo pipefail

# packages.yaml hash: {{ include ".chezmoidata/packages.yaml" | sha256sum }}

echo "==> Installing packages..."

{{ if eq .chezmoi.os "linux" -}}
sudo apt-get update -qq

# Common packages
{{ range .linux.apt.common -}}
sudo apt-get install -y -qq {{ . }}
{{ end -}}

{{ if eq .machineType "desktop" -}}
# Desktop packages
{{ range .linux.apt.desktop -}}
sudo apt-get install -y -qq {{ . }}
{{ end -}}
{{ end -}}

# npm global packages
{{ range .linux.npm_globals -}}
sudo npm install -g {{ . }}
{{ end -}}

# Docker Engine CE + Docker Compose
if ! command -v docker &>/dev/null; then
  echo "==> Installing Docker Engine..."
  sudo install -m 0755 -d /etc/apt/keyrings
  curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo gpg --dearmor -o /etc/apt/keyrings/docker.gpg
  sudo chmod a+r /etc/apt/keyrings/docker.gpg
  echo "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] https://download.docker.com/linux/ubuntu $(. /etc/os-release && echo "$VERSION_CODENAME") stable" | sudo tee /etc/apt/sources.list.d/docker.list > /dev/null
  sudo apt-get update -qq
  sudo apt-get install -y -qq docker-ce docker-ce-cli containerd.io docker-compose-plugin
  sudo usermod -aG docker "$USER"
fi

{{ end -}}

{{ if eq .chezmoi.os "darwin" -}}
# Homebrew formulae
{{ range .darwin.brews -}}
brew install {{ . }} 2>/dev/null || true
{{ end -}}

# Homebrew casks
{{ range .darwin.casks -}}
brew install --cask {{ . }} 2>/dev/null || true
{{ end -}}

# npm global packages
{{ range .linux.npm_globals -}}
npm install -g {{ . }}
{{ end -}}
{{ end -}}

echo "==> Packages installed."
