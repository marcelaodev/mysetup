Host *
  AddKeysToAgent yes
  IdentitiesOnly yes

Host github.com
  HostName github.com
  User git
  IdentityFile ~/.ssh/id_github

{{ if or (eq .machineType "desktop") (eq .machineType "server") -}}
Host myserver
  HostName {{ (bitwardenFields "item" "server-config").domain.value }}
  User marcelo
  Port {{ (bitwardenFields "item" "server-config").sshPort.value }}
  IdentityFile ~/.ssh/id_ed25519

{{ range (bitwarden "item" "ssh-hosts").notes | fromJson -}}
Host {{ .alias }}
  HostName {{ .host }}
  User {{ .user }}
{{ if .port }}  Port {{ .port | toString }}
{{ end -}}
{{ if .key }}  IdentityFile {{ .key }}
{{ end }}
{{ end -}}
{{- end }}
